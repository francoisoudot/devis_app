
<div id='orders'>
  <div class='row'>
    <div class='col-sm-12'>
      <div class='page-header'>
        <h1 class='pull-left'>
          <i class='icon-inbox'></i>
          <span>Factures</span>
        </h1>
      </div>
      <div class='row'>
        <div class='col-sm-12'>
          <a class="btn btn-success btn-block btn-lg" type="button" href="/invoices/new">Nouvelle facture</a>
          <p></p>
          <div class='box'>
            <div class='box-content'> 
              <% @invoices.each do |invoice| %>
                <tr>
                  <div class='col-sm-9'>
                      <div class='pull-left'>
                        <p>
                          <%= link_to(invoice) do %>
                            <strong>#<%= invoice.id %></strong>  <%= invoice.title %>

                          <% end %>
                        </p>
                        <p>
                          <% @client=Client.find_by_id(invoice.client_id) %>

                            <%= link_to(clients_path) do %>
                              <%=@client.first_name.capitalize%> <%=@client.last_name.capitalize %>                                            

                            <% end %>
                        </p>  
                      </div>
                      <div class='text-right pull-right'>
                        <h4 class='contrast price'><%= invoice.total.to_d if invoice.total!=nil %> €</h4>
                        <p>
                          <span><%= distance_of_time_in_words(Time.now, invoice.created_at) %></span>
                          <i class='icon-time'></i>
                        </p>
                      </div>
                  </div>
                  <div class='col-sm-3'>
                   <div class='text-right pull-right'>
                    <a href="" class='' onclick="window.open('/visu_pdf/invoice_visu.<%= invoice.id %>','_blank');">Visualiser</a>
                      |
                    <a class='' data-toggle="modal" href="#modal-facturer">Facturer</a>
                      |  
                    <%= link_to 'Supprimer', invoice, method: :delete, data: { confirm: 'Etes vous sûr de vouloir supprimer cette facture?' } %>
                    
                   </div> 
                  </div>      
                  <div class='clearfix'></div>
                  <hr class='hr-normal'>
                </tr>
              <% end %>
              <div class='clearfix'></div>
              <hr class='hr-normal'>
            </div>
            
          </div>
        </div>
      </div>
    </div>
    
  </div>

  <script type="text/javascript">
  $( document ).ready(function() {
    $("#nav_invoice").toggleClass( 'active');
});

  </script>


<br>