<body class='contrast-red login contrast-background'>
    <div class='middle-container'>
      <div class='middle-row'>
        <div class='middle-wrapper'>
          <div class='login-container-header'>
            <div class='container'>
              <div class='row'>
                <div class='col-sm-12'>
<!--                   <div class='text-center'>
                    <img width="121" height="31" src="/assets/images/logo_lg.svg" />
                  </div>
 -->                </div>
              </div>
            </div>
          </div>
          <div class='login-container'>
            <div class='container'>
              <div class='row'>
                <div class='col-sm-4 col-sm-offset-4'>
                  <h1 class='text-center title'>Mot de passe oublié</h1>
                  <!-- <form accept-charset="UTF-8" action="/users/password" class="new_user" id="new_user" method="post"> -->
                  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                    <%= devise_error_messages! %>

                    <div class='form-group'>
                      <div class='controls with-icon-over-input'>
                      <%= f.email_field :email, autofocus: true, placeholder: "E-mail", class: "form-control" %>
                      <i class='icon-user text-muted'></i>
                      </div>
                    </div>

                    <div><%= f.submit "Envoyer moi la procédure", class: 'btn btn-block' %></div>
                  <% end %>
                  <div class='text-center'>
                    <hr class='hr-normal'>
                    
                      <i class='icon-chevron-left'></i>
                      <%= link_to "Je connais mon mot de passe", new_session_path(resource_name) %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class='login-container-footer'>
            <div class='container'>
              <div class='row'>
                <div class='col-sm-12'>
                  <div class='text-center'>
                    <a href='/users/sign_up'>
                      <i class='icon-user'></i>
                      Nouveau à Devis app?
                      <strong>Sign up</strong>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>