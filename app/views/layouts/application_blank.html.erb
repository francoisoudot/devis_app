
<!DOCTYPE html>
<html>
  <head>
    <title>Devis app</title>

  <script src="http://code.jquery.com/jquery-latest.min.js"></script>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
 

    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <meta content='text/html;charset=utf-8' http-equiv='content-type'>
    <meta content='Devis app' name='description'>

    <!--[if lt IE 9]>
      <script src="assets/javascripts/ie/html5shiv.js" type="text/javascript"></script>
      <script src="assets/javascripts/ie/respond.min.js" type="text/javascript"></script>
    <![endif]-->
  </head>

<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    </div>
  <% end %>
<% end %>     
<%= yield%>
<script type="text/javascript">
$(document).ready(function() {
  // document.getElementsByClassName("field_with_errors").className = "has_error";
var els = [].slice.apply(document.getElementsByClassName("field_with_errors"));
for (var i = 0; i < els.length; i++) {
    els[i].className = els[i].className.replace(/ *\bfield_with_errors\b/g, "");
    $(els[i]).parent().parent().addClass("has-error")
}
});
</script>
</html>

