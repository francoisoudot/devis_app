                  <div id='phone'><%=@client.phone%></div>
                </address>
              </div>
              <div class='col-sm-4'>
                <div class='lead'>
                  <i class='icon-envelope contrast'></i>
                  Addresse client
                </div>
                <address>
                  <strong><div id='full_name'><%=@client.first_name%> <%=@client.last_name%></div></strong>
                  <div id='address'><%=@client.address%></div>
                  <div id='city'><%=@client.city%></div>
                </address>
              </div>
              <div class='col-sm-4'>
